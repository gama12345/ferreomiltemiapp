        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/dark_main_color</item>
        <item name="colorOnPrimary">@color/text_main_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/text_dark_color</item>
        <item name="colorSecondaryVariant">@color/text_main_color</item>
